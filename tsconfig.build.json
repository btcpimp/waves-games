{
  "compilerOptions": {
    "declaration": true,
    "inlineSources": true,
    "importHelpers": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "strict": false,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "target": "es6",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"]
}
